<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ChoiceActivity">

    <Button
        android:id="@+id/marketPlaceBtnView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Head to Marketplace"
        android:layout_centerInParent="true"/>


    <Button
        android:id="@+id/FlickrBtnView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flickr Inspiration"
        android:layout_below="@id/marketPlaceBtnView"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/SavedPhotosBtnView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Photos"
        android:layout_below="@id/FlickrBtnView"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>